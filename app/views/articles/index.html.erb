<h1>My tasks</h1>
<ul class="list-group mb-4">
  <% @articles.each do |article| %>
    <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to article["title"], article_path(article["id"]), class: "text-decoration-none" %>
    <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do%>
      <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "Create a new Article", new_article_path, class: "btn btn-primary"%>
